@model ClubApp.Models.LoginViewModel
@{
    ViewBag.Title = "忘记密码";
}

<h2>重置密码</h2>
<blockquote class="layui-elem-quote">
    <i>本页面本是为了帮助管理员重置用户密码所用</i><br />
    <i>项目测试期间开放为所有用户可用——项目上线前务必为本页面加上管理员权限</i><br />
    <i>请勿随意改动他人的密码</i>
</blockquote>
@using (Html.BeginForm("ForgetPwd", "Account", FormMethod.Post, new { @class = "layui-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="layui-form-item">
        @Html.LabelFor(m => m.UserName, new { @class = "layui-form-label" })
        <div class="layui-input-inline">
            @Html.TextBoxFor(m => m.UserName, new { @class = "layui-input" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="layui-form-item">
        <label class = "layui-form-label">设置密码</label>
        <div class="layui-input-inline">
            @Html.PasswordFor(m => m.Password, new { @class = "layui-input" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <input type="submit" value="提交" class="layui-btn" />
        </div>
    </div>
}
