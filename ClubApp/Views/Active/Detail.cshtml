        <textarea placeholder="请输入内容" id="Content" name="Content" class="layui-textarea"></textarea>
    </div>
    <div class="layui-form-item">
        <div id="rate1"></div>
        <input type="hidden" name="aid" value="@Model.Id" />
        <input type="hidden" name="vote" id="voteval" value="0" />
    </div>
