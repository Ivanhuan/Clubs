        <button class="layui-btn" lay-submit lay-filter="demo2">提交</button>
        <button type="button" class="layui-btn" onclick="getcontent()"><i class="layui-icon layui-icon-play"></i>预览</button>
    </div>
}
<ul class="ul-list">
